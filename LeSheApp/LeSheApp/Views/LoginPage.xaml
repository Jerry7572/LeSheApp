<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="登入"
             x:Class="LeSheApp.Views.LoginPage"
             >
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Entry x:Name="Email" Text="YuChen789@gmail.com" Placeholder="Email"   
                           PlaceholderColor="White" HeightRequest="40"   
                           Keyboard="Email"  
                           />
            <Entry x:Name="Password" Text="Password123" Placeholder="Password"   
                           PlaceholderColor="White" HeightRequest="40"   
                           IsPassword="True"  
                           />
            <Button VerticalOptions="Center" BackgroundColor="#89B130" Text="登入" Clicked="btnDetail_click"/>
            <Label x:Name="Error" Text="" VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>